{
  "name": "TRIDSN FB Messages",
  "description": "Xem lại tin nhắn đã gỡ trên fb",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "TRIDSN FB Message",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "externally_connectable": {
    "matches": [
      "*://*.facebook.com/*",
      "*://*.messenger.com/*",
      "*://*.instagram.com/*"
    ]
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "background",
    "*://*.facebook.com/*",
    "*://*.messenger.com/*"
  ],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": ["./content.js"],
      "css": ["./content.css"],
      "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "inject_websocket.js",
    "icons/icon16.png",
    "icons/icon32.png"
  ]
}
